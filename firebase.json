{
    "hosting": {
        "public": "./public",
        "cleanUrls": true,
        "trailingSlash": true,
        "rewrites": [{
            "source": "**",
            "destination": "/index.html"
        }],
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ]
    },
    "emulators": {
        "hosting": {
            "port": 2000,
            "host": "localhost"
        }
    }
}