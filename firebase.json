{
    "hosting": {
        "public": "/",
        "cleanUrls": true,
        "trailingSlash": true,
        "rewrites": [{
            "source": "/",
            "destination": "/dist"
        }, {
            "source": "**",
            "destination": "/stories/dist/"
        }],
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ]
    },
    "emulators": {
        "hosting": {
            "port": 2000,
            "host": "localhost"
        }
    }
}